@using OnlineTicariOtomasyon.Models.Classes
@model List <Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<a href="/Employee/Add" class="btn btn-primary" style="margin-left:16px;margin-top:16px">Yeni Personel</a>

<table class="table  table-hover" style="margin-top:16px; margin-left:16px; margin-right:16px">
    <thead>
        <tr>
            <th class="col-lg-1">Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th class="col-lg-1">Photo</th>
            <th>Department</th>
            <th class="col-lg-2">Detail</th>
            <th class="col-lg-1">Edit</th>
            <th class="col-lg-1">Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var e in Model)
        {

            <tr>
                <td>@e.EmployeeId</td>
                <td>@e.Name</td>
                <td>@e.Surname</td>
                <td><img src="@e.PhotoPath" style="max-height:50px"/></td>
                <td>@e.Department.Name</td>
                <td><a href="/Employee/EmployeeOrders/@e.EmployeeId" class="btn btn-info">Satış Geçmişi</a></td>
                <td><a href="/Employee/Update/@e.EmployeeId" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Employee/Delete/@e.EmployeeId" class="btn btn-danger">Sil</a></td>
            </tr>

        }

    </tbody>
</table>

