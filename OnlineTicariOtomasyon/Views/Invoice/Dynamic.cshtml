@model OnlineTicariOtomasyon.Models.ViewModels.InvoiceVM
@{
    ViewBag.Title = "Dynamic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="panel panel-default">

    <div class="panel-heading">

        <div class="row">

            <h2 class="panel-title pull-left" style="margin-left:10px;">

                <strong>Fatura & Kalem İşlemleri</strong>

            </h2>

            <button style="margin-right:10px" class="btn btn-primary pull-right" onclick="addNewOrder()">Fatura Girişi</button>

        </div>

    </div>
    

    @foreach (var item in Model.Invoices)

    {

        <div class="panel-body">

            <table class="table table-striped table-responsive">

                <tbody>

                    <tr>

                        <td>Seri - Sıra No Name : @item.SerialNumber-@item.RowNumber </td>
                        <td>Tarih : @item.Date.ToString("dd/MM/yyyy") </td>
                        <td>Vergi Dairesi : @item.TaxAdmin </td>
                        <td>Teslim Eden : @item.Submitter </td>
                        <td>Teslim Alan : @item.Receiver </td>


                    </tr>
                    <tr>

                        <td colspan="5">

                            <table class="table table-bordered">

                                <tbody>

                                    <tr>

                                        <th>Açıklama</th>

                                        <th>Miktar</th>

                                        <th>Birim Fiyat</th>
                                        <th>Tutar</th>


                                    </tr>

                                    @{

                                        var totalBill = 0;

                                    }

                                    @foreach (var order in item.InvoiceRows)

                                    {

                                        <tr>

                                            <td>@order.Description</td>

                                            <td>@order.Amount</td>

                                            <td>@order.UnitPrice</td>
                                            <td>@order.Total</td>


                                        </tr>

                                        totalBill = totalBill + @Convert.ToInt32(order.Total);

                                    }

                                </tbody>

                            </table>

                            <span class="pull-right" style="margin-right:100px;"><strong>Fatura Toplam Tutar :  </strong> @totalBill</span>

                        </td>

                    </tr>


                </tbody>

            </table>

        </div>

    }



</div>

<div class="modal fade" id="newOrderModal">

    <div class="modal-dialog modal-lg" style=" width: 900px !important;">

        <div class="modal-content">

            <div class="modal-header">

                <a href="#" class="close" data-dismiss="modal">&times;</a>

                <h4>Yeni Fatura Girişi</h4>

            </div>

            <form id="NewOrderForm">

                <div class="modal-body">

                    @*Customer Details*@

                    <h5 style="color:#ff6347">Fatura Detayları</h5>

                    <hr />

                    <div class="form-horizontal">

                        <input type="text" hidden id="InvoiceId" />

                        <div class="form-group">

                            <label class="control-label col-md-2">

                                Seri Numarası

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="SerialNumber" name="SerialNumber" placeholder="Seri Numarası" class="form-control" />

                            </div>

                            <label class="control-label col-md-2">

                                Sıra Numarası

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="RowNumber" name="RowNumber" placeholder="Sıra Numarası" class="form-control" />

                            </div>
                        </div>
                        <div class="form-group">

                            <label class="control-label col-md-2">

                                Tarih

                            </label>

                            <div class="col-md-4">

                                <input type="date" id="Date" name="Date" placeholder="Tarih" class="form-control" />

                            </div>

                            <label class="control-label col-md-2">

                                Saat

                            </label>

                            <div class="col-md-4">

                                <input type="time" id="Time" name="Time" placeholder="Saat" class="form-control" />

                            </div>


                        </div>
                        <div class="form-group">



                            <label class="control-label col-md-2">

                                Teslim Eden

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="Submitter" name="Submitter" placeholder="Teslim Eden" class="form-control" />

                            </div>

                            <label class="control-label col-md-2">

                                Teslim Alan

                            </label>
                            <div class="col-md-4">

                                <input type="text" id="Receiver" name="Receiver" placeholder="Teslim Alam" class="form-control" />

                            </div>
                        </div>
                        <div class="form-group">

                            <label class="control-label col-md-2">

                                Vergi Dairesi

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="TaxAdmin" name="TaxAdmin" placeholder="Vergi Dairesi" class="form-control" />

                            </div>

                            <label class="control-label col-md-2">

                                Toplam

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="Total" name="Total" placeholder="Toplam" class="form-control" />

                            </div>
                        </div>
                    </div>




                    @*Order Details*@

                    <h5 style="margin-top:10px;color:#ff6347">Fatura Kalemleri</h5>

                    <hr />

                    <div class="form-horizontal">

                        <input type="hidden" id="InvoiceRowId" />

                        <div class="form-group">

                            <label class="control-label col-md-2">

                                Açıklama

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="Description" name="Description" placeholder="Açıklama" class="form-control" />

                            </div>

                            <label class="control-label col-md-2">

                                Miktar

                            </label>

                            <div class="col-md-4">

                                <input type="number" id="Amount" name="Amount" placeholder="Miktar" class="form-control" />

                            </div>

                        </div>



                        <div class="form-group">

                            <label class="control-label col-md-2">

                                Birim Fiyat

                            </label>

                            <div class="col-md-4">

                                <input type="number" id="UnitPrice" name="UnitPrice" placeholder="Birim Fiyat" class="form-control" />

                            </div>

                            <div class="col-md-2 col-lg-offset-4">

                                <a id="addToList" class="btn btn-primary">Listeye Ekle</a>

                            </div>

                        </div>



                        <table id="detailsTable" class="table">

                            <thead>

                                <tr>

                                    <th style="width:30%">Açıklama</th>

                                    <th style="width:20%">Miktar</th>

                                    <th style="width:15%">Birim Fiyat</th>

                                    <th style="width:25%">Tutar</th>

                                    <th style="width:10%"></th>

                                </tr>

                            </thead>

                            <tbody></tbody>

                        </table>

                    </div>

                </div>
                <div class="modal-footer">

                    <button type="reset" class="btn btn-default" data-dismiss="modal">Kapat</button>

                    <button id="saveOrder" type="submit" class="btn btn-danger">Faturayı Kaydet</button>

                </div>
        </div>


        </form>

    </div>

</div>


@section scripts{

    <script>

        //Show Modal.

        function addNewOrder() {

            $("#newOrderModal").modal();

        }

        //Add Multiple Order.

        $("#addToList").click(function (e) {

            e.preventDefault();



            if ($.trim($("#Description").val()) == "" || $.trim($("#UnitPrice").val()) == "" || $.trim($("#Amount").val()) == "") return;



            var Description = $("#Description").val(),

                UnitPrice = $("#UnitPrice").val(),

                Amount = $("#Amount").val(),

                detailsTableBody = $("#detailsTable tbody");



            var productItem = '<tr><td>' + Description + '</td><td>' + Amount + '</td><td>' + UnitPrice + '</td><td>' + (parseFloat(UnitPrice) * parseInt(Amount)) + '</td><td><a data-itemId="0" href="#" class="deleteItem">Remove</a></td></tr>';

            detailsTableBody.append(productItem);

            clearItem();

        });

        //After Add A New Order In The List, Clear Clean The Form For Add More Order.

        function clearItem() {

            $("#Description").val('');

            $("#UnitPrice").val('');

            $("#Amount").val('');

        }

        // After Add A New Order In The List, If You Want, You Can Remove It.

        $(document).on('click', 'a.deleteItem', function (e) {

            e.preventDefault();

            var $self = $(this);

            if ($(this).attr('data-itemId') == "0") {

                $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800, function () {

                    $(this).remove();

                });

            }

        });

        //After Click Save Button Pass All Data View To Controller For Save Database

        function saveOrder(data) {

            return $.ajax({

                contentType: 'application/json; charset=utf-8',

                dataType: 'json',

                type: 'POST',

                url: "/Invoice/SaveInvoice",

                data: data,

                success: function (result) {

                    alert(result);

                    location.reload();

                },

                error: function () {

                    alert("Error!")

                }

            });

        }

        //Collect Multiple Order List For Pass To Controller

        $("#saveOrder").click(function (e) {

            e.preventDefault();



            var invoiceRows = [];

            invoiceRows.length = 0;



            $.each($("#detailsTable tbody tr"), function () {

                invoiceRows.push({

                    Description: $(this).find('td:eq(0)').html(),

                    Amount: $(this).find('td:eq(1)').html(),

                    UnitPrice: $(this).find('td:eq(2)').html(),

                    Total: $(this).find('td:eq(3)').html()

                });

            });


            var invoice = {
                SerialNumber: $("#SerialNumber").val(),
                RowNumber: $("#RowNumber").val(),
                Date: $("#Date").val(),
                RowNumber: $("#RowNumber").val(),
                TaxAdmin: $("#TaxAdmin").val(),
                Submitter: $("#Submitter").val(),
                Receiver: $("#Receiver").val(),
                Time: $("#Time").val(),
                Total: $("#Total").val()
            };


            var data = JSON.stringify({
                invoice: invoice,
                invoiceRows: invoiceRows

            });



            $.when(saveOrder(data)).then(function (response) {

                console.log(response);

            }).fail(function (err) {

                console.log(err);

            });

        });

    </script>

}

