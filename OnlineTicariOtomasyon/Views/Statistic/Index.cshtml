@using OnlineTicariOtomasyon.Models.Classes
@model List<StatisticCard>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div  style="margin-top:16px">
    <div class="row">


        @foreach (var card in Model)
        {
            <div class="col-md-3 col-lg-3 mb-4 stretch-card ">
                <div class="card card-tale" style="background-color:@card.BackgroundColor; color:white ">
                    <div class="card-body">
                        <p class="mb-1">@card.Title</p>
                        <p class="mb-2" style="font-size:20px">@card.Value</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


