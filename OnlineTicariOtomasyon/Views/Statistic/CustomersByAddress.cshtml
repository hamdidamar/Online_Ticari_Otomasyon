@using OnlineTicariOtomasyon.Models.Classes.DTO
@model IEnumerable<CustomerCityGroup>

<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Customers By Address</h3>

            <div class="card-tools">
                <ul class="pagination pagination-sm float-right">
                    <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                </ul>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>City</th>
                        <th>Progress Bar</th>
                        <th style="width: 40px">Count</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int row = 0; }
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@{row++;} @row</td>
                            <td>@x.City</td>
                            <td>
                                @if (x.Count <= 1)
                                {
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-danger" style="width: @x.Count%"></div>
                                    </div>
                                }
                                @if (x.Count == 2)
                                {
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-warning" style="width: @x.Count%"></div>
                                    </div>
                                }
                                @if (x.Count >= 3)
                                {
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-success" style="width: @x.Count%"></div>
                                    </div>
                                }

                            </td>
                            <td>
                                @if (x.Count <= 1)
                                {
                                    <span class="badge bg-danger">@x.Count</span>
                                }
                                @if (x.Count == 2)
                                {
                                    <span class="badge bg-warning">@x.Count</span>
                                }
                                @if (x.Count >= 3)
                                {
                                    <span class="badge bg-success">@x.Count</span>
                                }
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    @Html.Action("ProductsByBrand", "Statistic")

</div>
