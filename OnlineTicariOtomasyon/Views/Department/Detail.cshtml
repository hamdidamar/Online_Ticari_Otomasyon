@using OnlineTicariOtomasyon.Models.Classes
@model List<Employee>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Depatman Detayı</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@(ViewBag.department) Departmanı</li>
</ol>

<table class="table table-bordered table-hover" style="margin-top:16px; margin-left:16px; margin-right:16px">
    <thead>
        <tr>
            @*<th class="col-lg-1">Id</th>*@
            <th>Name</th>
            <th>Surname</th>
            <th>Photo</th>
            <th>Orders</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
        <tr>
            @*<td>@e.EmployeeId</td>*@

            <td>@e.Name</td>
            <td>@e.Surname</td>
            <td><img src="@e.PhotoPath" style="max-height:50px" /></td>
            <td><a href="/Department/EmployeeOrders/@e.EmployeeId" class="btn btn-info">Satışlar</a></td>
        </tr>
        }

    </tbody>
</table>
