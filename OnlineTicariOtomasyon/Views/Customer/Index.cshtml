@using OnlineTicariOtomasyon.Models.Classes
@model List<Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<a href="/Customer/Add" class="btn btn-primary" style="margin-left:16px;margin-top:16px">Yeni Müşteri</a>

<table class="table  table-hover" style="margin-top:16px; margin-left:16px; margin-right:16px">
    <thead>
        <tr>
            <th class="col-lg-1">Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Phone</th>
            <th>Mail</th>
            <th>Address</th>
            <th class="col-lg-2">Detail</th>
            <th class="col-lg-1">Edit</th>
            <th class="col-lg-1">Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var c in Model)
        {

        <tr>
            <td>@c.CustomerId</td>
            <td>@c.Name</td>
            <td>@c.Surname</td>
            <td>@c.Phone</td>
            <td>@c.Mail</td>
            <td>@c.Address</td>
            <td><a href="/Customer/CustomerOrders/@c.CustomerId" class="btn btn-info">Satış Geçmişi</a></td>
            <td><a href="/Customer/Update/@c.CustomerId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Customer/Delete/@c.CustomerId" class="btn btn-danger">Sil</a></td>
        </tr>

        }

    </tbody>
</table>
