@using OnlineTicariOtomasyon.Models.Classes
@model List<Order>
@{
    ViewBag.Title = "CustomerOrders";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Satış Geçmişi</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Müşteri : @(ViewBag.customer)</li>
</ol>

<table class="table table-bordered table-hover" style="margin-top:16px; margin-left:16px; margin-right:16px">
    <thead>
        <tr>
            <th class="col-lg-1">Id</th>
            <th>Product</th>
            <th>Amount</th>
            <th>Price</th>
            <th>Total</th>
            <th>Employee</th>
            <th>Date</th>
            <th>Print</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.OrderId</td>
                <td>@o.Product.Name</td>
                <td>@o.Amount</td>
                <td>@o.Price</td>
                <td>@o.Total</td>
                <td>@o.Employee.Name  @o.Employee.Surname</td>
                <td>@o.Date.ToShortDateString()</td>
                <td><a href="#" class="btn btn-primary">Yazdır</a></td>
            </tr>
        }
    </tbody>
</table>