@using OnlineTicariOtomasyon.Models.Classes
@model List<CargoDetail>
@{
    ViewBag.Title = "Cargo";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}
<br />
@using (Html.BeginForm("Cargo", "CustomerPanel", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası : @Html.TextBox("id")
        <input type="submit" value="Ara.." />
    </p>
}

<table id="table_cargoDetails" class="table table-bordered table-hover" style="margin-top:16px; margin-left:16px; margin-right:16px">
    <thead>
        <tr>
            <th>Code</th>
            <th>Personel</th>
            <th>Receiver</th>
            <th>Date</th>
            <th class="col-lg-1">Detail</th>
            @*<th class="col-lg-1">Edit</th>
                <th class="col-lg-1">Delete</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Code</td>

                <td>@c.Employee</td>
                <td>@c.Receiver</td>
                <td>@c.Date.ToString("dd/MM/yyyy hh:mm")</td>
                <td><a href="/CustomerPanel/CargoOperation/@c.Code" class="btn btn-info">Detail</a></td>
            </tr>
        }

    </tbody>
</table>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>


<script>

    $('#table_cargoDetails').dataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
        }
    });

</script>