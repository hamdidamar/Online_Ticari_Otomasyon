@using OnlineTicariOtomasyon.Models.Classes
@model List<Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<a href="/Order/Add" class="btn btn-primary" style="margin-left:16px;margin-top:16px">Yeni Satış</a>
<br />
<br />
<table id="table_orders" class="table  table-hover" style="margin-top:16px; margin-left:16px; margin-right:16px">
    <thead>
        <tr>
            <th class="col-lg-1">Id</th>
            <th>Product</th>
            <th>Customer</th>
            <th>Amount</th>
            <th>Price</th>
            <th>Total</th>
            <th>Employee</th>
            <th>Date</th>
            <th class="col-lg-2">Detail</th>
            <th class="col-lg-1">Edit</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var o in Model)
        {

            <tr>
                <td>@o.OrderId</td>
                <td>@o.Product.Name</td>
                <td>@o.Customer.Name</td>
                <td>@o.Amount</td>
                <td>@o.Price</td>
                <td>@o.Total</td>
                <td>@o.Employee.Name</td>
                <td>@o.Date.ToShortDateString()</td>
                <td><a href="/Order/Detail/@o.OrderId" class="btn btn-info">Satış Detayı</a></td>
                <td><a href="/Order/Update/@o.OrderId" class="btn btn-warning">Güncelle</a></td>
            </tr>

        }

    </tbody>
</table>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>

    $('#table_orders').dataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
        }});

</script>